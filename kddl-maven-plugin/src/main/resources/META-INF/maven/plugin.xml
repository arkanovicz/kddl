<?xml version="1.0" encoding="UTF-8"?>
<plugin>
    <name>KDDL Maven Plugin</name>
    <description>Maven plugin to generate SQL database creation scripts from KDDL model files</description>
    <groupId>${groupId}</groupId>
    <artifactId>${artifactId}</artifactId>
    <version>${version}</version>
    <goalPrefix>kddl</goalPrefix>
    <isolatedRealm>false</isolatedRealm>
    <inheritedByDefault>true</inheritedByDefault>
    <mojos>
        <mojo>
            <goal>generate-sql</goal>
            <description>Generates SQL database creation script from a KDDL model file</description>
            <requiresDirectInvocation>false</requiresDirectInvocation>
            <requiresProject>true</requiresProject>
            <requiresReports>false</requiresReports>
            <aggregator>false</aggregator>
            <requiresOnline>false</requiresOnline>
            <inheritedByDefault>true</inheritedByDefault>
            <phase>generate-resources</phase>
            <implementation>com.republicate.kddl.maven.GenerateSQLMojo</implementation>
            <language>java</language>
            <instantiationStrategy>per-lookup</instantiationStrategy>
            <executionStrategy>once-per-session</executionStrategy>
            <threadSafe>false</threadSafe>
            <parameters>
                <parameter>
                    <name>model</name>
                    <type>java.io.File</type>
                    <required>true</required>
                    <editable>true</editable>
                    <description>Source KDDL model file</description>
                </parameter>
                <parameter>
                    <name>sql</name>
                    <type>java.io.File</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>Output SQL file</description>
                </parameter>
                <parameter>
                    <name>format</name>
                    <type>java.lang.String</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>Output format: POSTGRESQL, HYPERSQL, PLANTUML, or KDDL</description>
                </parameter>
                <parameter>
                    <name>quoted</name>
                    <type>boolean</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>Use quoted identifiers</description>
                </parameter>
                <parameter>
                    <name>uppercase</name>
                    <type>boolean</type>
                    <required>false</required>
                    <editable>true</editable>
                    <description>Use uppercase identifiers</description>
                </parameter>
            </parameters>
            <configuration>
                <model implementation="java.io.File">\${kddl.model}</model>
                <sql implementation="java.io.File" default-value="\${project.build.directory}/generated-resources/kddl/init.sql">\${kddl.sql}</sql>
                <format implementation="java.lang.String" default-value="POSTGRESQL">\${kddl.format}</format>
                <quoted implementation="boolean" default-value="false">\${kddl.quoted}</quoted>
                <uppercase implementation="boolean" default-value="false">\${kddl.uppercase}</uppercase>
            </configuration>
        </mojo>
    </mojos>
    <dependencies>
        <dependency>
            <groupId>com.republicate.kddl</groupId>
            <artifactId>kddl-jvm</artifactId>
            <version>${version}</version>
            <type>jar</type>
        </dependency>
    </dependencies>
</plugin>
